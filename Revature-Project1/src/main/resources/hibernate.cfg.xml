<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver.class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres?currentSchema=story_pitch</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">password</property>


		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="use_sql_comments">true</property>

		<mapping class="com.revature.beans.ApprovalProofreaders"></mapping>
		<mapping class="com.revature.beans.Author"></mapping>
		<mapping class="com.revature.beans.Editor"></mapping>
		<!-- <mapping class="com.revature.beans.FinalApprovalViewing"></mapping> -->
		<mapping class="com.revature.beans.FurtherInfoRequests"></mapping>
		<mapping class="com.revature.beans.Genre"></mapping>
		<mapping class="com.revature.beans.GenreCommittee"></mapping>
		<mapping class="com.revature.beans.GenreCommitteeMember"></mapping>
		<mapping class="com.revature.beans.LengthOfWork"></mapping>
		<mapping class="com.revature.beans.Stage"></mapping>
		<mapping class="com.revature.beans.Status"></mapping>
		<mapping class="com.revature.beans.StoryPitch"></mapping>
		<mapping class="com.revature.beans.User"></mapping>
		<mapping class="com.revature.beans.Work"></mapping>
	</session-factory>
</hibernate-configuration>